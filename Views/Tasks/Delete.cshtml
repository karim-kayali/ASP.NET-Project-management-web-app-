@model AdvancedFinalProject.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<h1>Delete Task</h1>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Task Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskDescription)
        </dd>

        <dt class="col-sm-2">
           Due Date
        </dt>
        <dd class="col-sm-10">
            @(Model.TaskDueDate.HasValue ? Model.TaskDueDate.Value.ToString("MM/dd/yyyy") : "No due date")
        </dd>

     
    </dl>

    
    <form asp-action="Delete" method="post">
         
        <input type="hidden" name="id" value="@Model.TaskId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">← Back to Task List</a>
       
    </form>
</div>
