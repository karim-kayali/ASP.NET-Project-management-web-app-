@model AdvancedFinalProject.Models.TaskItem

@{
    ViewData["Title"] = "Task Details";
}

<h1>Task Details</h1>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Task Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>

        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskDescription)
        </dd>

        <dt class="col-sm-2">
            Task Priority
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskPriority)
        </dd>

        <dt class="col-sm-2">
            DueDate
        </dt>
        <dd class="col-sm-10">
            @(Model.TaskDueDate.HasValue ? Model.TaskDueDate.Value.ToString("MM/dd/yyyy") : "No due date")
        </dd>



        <dt class="col-sm-2">
            Assignee
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Assignee.UserName)
        </dd>



        <dt class="col-sm-2">
        
    </dl>
</div>

<a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">← Back to Task List</a>

 

 