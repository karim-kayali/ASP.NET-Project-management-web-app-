@model AdvancedFinalProject.Models.TaskItem


<form asp-action="Edit" method="post">
    <input type="hidden" name="TaskId" value="@Model.TaskId" />

    <div class="form-group">
        <label for="TaskName">Task Name</label>
        <input name="TaskName" value="@Model.TaskName" class="form-control" />
    </div>

    <div class="form-group">
        <label for="TaskDescription">Description</label>
        <input name="TaskDescription" value="@Model.TaskDescription" class="form-control" />
    </div>
     @Model.TaskPriority

    <div class="form-group">
        <label for="TaskPriority">Priority</label>
        <select name="TaskPriority" class="form-control">
            <option value="Low" selected="@(Model.TaskPriority == "Low")">Low</option>
            <option value="Medium" selected="@(Model.TaskPriority == "Medium")">Medium</option>
            <option value="High" selected="@(Model.TaskPriority == "High")">High</option>
        </select>
    </div>


    <div class="form-group">
        <label for="TaskDueDate">Due Date</label>
        <input type="date" name="TaskDueDate" value="@(Model.TaskDueDate?.ToString("yyyy-MM-dd"))" class="form-control" />
    </div>

    <div class="mt-3">
        <input type="submit" value="💾 Save" class="btn btn-primary me-2" />
        <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">
            ← Back to Task List
        </a>
    </div>



</form>
